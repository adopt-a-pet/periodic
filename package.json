{
  "name": "@aap/periodic",
  "version": "2.0.0",
  "description": "A design system for AAP's Vue components",
  "main": "dist/system/system.js",
  "files": [
    "dist/system"
  ],
  "license": "MIT",
  "scripts": {
    "dev": "webpack-dev-server --inline --config ./build/webpack.dev.conf.js",
    "start": "npm-run-all --parallel styleguide theo:onchange theo dev",
    "unit": "jest --config ./test/unit/jest.conf.js --coverage",
    "build": "npm-run-all theo node:build",
    "build:app": "npm run build",
    "build:system": "npm-run-all theo node:build:system",
    "build:docs": "npm-run-all theo styleguide:build",
    "lint": "eslint '**/*.{js,vue}' --cache",
    "lint-fix": "./node_modules/.bin/eslint --ext .js,.vue --fix .",
    "node:build": "node ./build/build.js",
    "node:build:system": "node ./build/build-system.js",
    "prepublishOnly": "npm run build:system && npm test",
    "styleguide": "vue-styleguidist server --open --config ./config/docs.config.js",
    "styleguide:build": "vue-styleguidist build --config ./config/docs.config.js",
    "theo": "theo ./src/tokens/tokens.yml --transform web --format map.scss,scss,raw.json,json --dest ./src/assets/tokens",
    "theo:onchange": "onchange \"./src/tokens/*.yml\" -- npm run theo",
    "test": "npm-run-all theo unit",
    "hook:pre-commit": "lint-staged"
  },
  "browserslist": [
    "last 2 versions",
    "> 5%",
    "Firefox ESR"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run hook:pre-commit"
    }
  },
  "lint-staged": {
    "**/*.{js,vue}": [
      "eslint --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com:adopt-a-pet/design-system.git"
  },
  "keywords": [
    "vue design system",
    "design system",
    "vue.js",
    "vue",
    "design",
    "system"
  ],
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-syntax-dynamic-import",
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-object-rest-spread",
      "@babel/plugin-transform-react-jsx",
      "@babel/plugin-transform-runtime"
    ],
    "env": {
      "test": {
        "presets": [
          "@babel/preset-env"
        ],
        "plugins": [
          "@babel/plugin-syntax-dynamic-import",
          "@babel/plugin-proposal-class-properties",
          "@babel/plugin-proposal-object-rest-spread"
        ]
      }
    }
  },
  "eslintConfig": {
    "rules": {
      "no-console": "error",
      "func-names": "off"
    },
    "extends": [
      "plugin:adoptapet/base",
      "plugin:adoptapet/vue"
    ],
    "env": {
      "browser": true,
      "node": true
    },
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": "build/webpack.base.conf.js"
        }
      }
    },
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 9,
      "ecmaFeatures": {
        "jsx": true
      }
    }
  },
  "dependencies": {
    "bem-cn": "^3.0.1",
    "fuse.js": "^3.4.4",
    "lodash": "^4.17.11",
    "mini-css-extract-plugin": "^0.4.3",
    "postcss-import": "^12.0.0",
    "postcss-loader": "^3.0.0",
    "postcss-safe-parser": "^4.0.1",
    "postcss-url": "^8.0.0",
    "tinycolor2": "^1.4.1",
    "vue": "^2.6.10",
    "vue-lodash": "^2.0.0",
    "vue-meta": "^1.5.5",
    "vue-router": "^3.1.3",
    "vue-scrollto": "^2.17.1",
    "vuelidate": "^0.7.4",
    "vuex": "^3.1.2",
    "webfontloader": "^1.6.28"
  },
  "devDependencies": {
    "axios": "^0.19.0",
    "@aap/flexed": "^0.9.9",
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-class-properties": "^7.7.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-react-jsx": "^7.7.0",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/register": "^7.7.0",
    "@vue/test-utils": "^1.0.0-beta.29",
    "autoprefixer": "^9.7.2",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.6",
    "chalk": "^2.4.1",
    "codemirror": "^5.49.2",
    "compression-webpack-plugin": "^2.0.0",
    "copy-webpack-plugin": "^4.5.3",
    "css-loader": "^1.0.0",
    "doctrine": "^3.0.0",
    "eslint": "^5.6.1",
    "eslint-import-resolver-webpack": "^0.10.1",
    "eslint-plugin-adoptapet": "^1.0.0",
    "eslint-plugin-compat": "^2.6.2",
    "file-loader": "^2.0.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "http-proxy-middleware": "^0.19.0",
    "husky": "^1.1.1",
    "jest": "^23.6.0",
    "jest-serializer-vue": "^2.0.2",
    "lint-staged": "^8.0.4",
    "node-notifier": "^5.2.1",
    "node-sass": "^4.13.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^5.0.2",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "ora": "^3.0.0",
    "portfinder": "^1.0.25",
    "prop-types": "^15.6.2",
    "react": "^16.12.0",
    "react-group": "^3.0.0",
    "recast": "^0.17.6",
    "rimraf": "^2.6.0",
    "sass-loader": "^7.1.0",
    "sass-resources-loader": "^1.3.3",
    "semver": "^5.5.1",
    "shelljs": "^0.8.2",
    "style-loader": "^0.23.1",
    "terser-webpack-plugin": "^1.1.0",
    "theo": "^8.0.1",
    "url-loader": "^1.1.1",
    "vue-docgen-api": "3.12.0",
    "vue-jest": "^2.6.0",
    "vue-loader": "^15.7.2",
    "vue-style-loader": "^4.1.2",
    "vue-styleguidist": "^2.1.2",
    "vue-template-compiler": "2.6.10",
    "webpack": "^4.41.2",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0",
    "webpack-merge": "^4.1.4",
    "webpack-merge-and-include-globally": "^2.1.20"
  },
  "engines": {
    "node": ">= 8.6.0",
    "npm": ">= 3.0.0"
  }
}
